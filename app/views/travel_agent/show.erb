<section id="agent_offers_container">
  <img src="<%= @travel_agent.logo_url %>" alt="<%= @travel_agent.name %>'s logo'">
  <div>
    <h2><%= @travel_agent.name %></h2>
    <section class="alter_options">
      <a class="alter_links" href="/travel_agent/<%= @travel_agent.id %>/edit">Edit</a>
      <% if(!@has_holidays) %>
        <form action='/travel_agent/<%= @travel_agent.id %>/delete' method='post'>
          <input class="clear_submit_button_styles alter_links"
            type="submit"
            value="'Delete">
        </form>
      <% else %>
        <p class="alter_links">Cannot delete - Has holidays on offer</p>
      <% end %>
    </section>
    <div id="options_container">
      <article>
        <p class="orange_border_button"><a href="/travel_agent/<%= @travel_agent.id %>/deal ">View Deals</a></p>
        <p class="orange_border_button"><a href="/travel_agent/<%= @travel_agent.id %>/holiday ">View Holidays</a></p>
        <p class="orange_border_button"><a href="/travel_agent/<%= @travel_agent.id %>/hotel">View Hotels</a></p>
      </article>
      <article id="options_row_two">
        <p class="orange_border_button"><a href="#">View Cities</a></p>
        <p class="orange_border_button"><a href="#">View Countries</a></p>
      </article>
    </div>
  </div>
</section>
<section>
  <p id="show_agent_description" class="medium_text"><%= @travel_agent.description %></p>
</section>
