<label for="hotel-name">Hotel</label>
<select id="hotel-name" class="" name="hotel_id">
  <% @hotels.each() do |hotel| %>
    <option
      value="<%= hotel.id %>"
      <%= "selected" if(@hotel && @hotel.name == hotel.name) %>
    >
      <%= hotel.name %>
    </option>
  <% end %>
</select>
<label for="agent-name">Travel Agent</label>
<select id="agent-name" name="travel_agent_id">
  <% @travel_agents.each() do |agent| %>
    <option
      value="<%= agent.id %>"
      <%= "selected" if(@agent && @agent.name == agent.name) %>>
      <%= agent.name %>
    </option>
  <% end %>
</select>
<label for="holiday-cost">Cost per person (per night)</label>
<input
  id="holiday-cost"
  type="number"
  name="cost_per_person"
  min="1" max="30000"
  value="<%= @cost if(@cost) %>"
>
<label for="holiday-nights">Number of Nights</label>
<input
  id="holiday-nights"
  type="number"
  name="nights"
  min="1" max="99"
  value="<%= @nights if(@nights) %>"
>
<input class="add_to_form_submit" type="submit" name="submit">
