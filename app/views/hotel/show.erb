<div id="show_hotel_container">

  <h2><%= @hotel.name %></h2>
  <h3>City   -   Country</h3>
  <section class="alter_options">
    <a class="alter_links" href="/hotel/<%= @hotel.id %>/edit">Edit</a>
    <% if(!@has_holidays) %>
      <form action="/hotel/<%= @hotel.id %>/delete" method='post'>
        <input class="clear_submit_button_styles alter_links"
          type="submit"
          value="Delete">
      </form>
    <% else %>
      <p class="alter_links">Cannot delete - Has holidays on offer</p>
    <% end %>
  </section>
  <div id="show_hotel_stars">
    <section>
      <% @hotel.stars.times() do %>
        <img class="star_image" src="/images/star.png" alt="image of a star">
      <% end %>
    </section>
  </div>
  <div>
    <p class="orange_border_button"><a href="/hotel/<%= @hotel.id %>/deal">View Deals</a></p>
    <p class="orange_border_button"><a href="/hotel/<%= @hotel.id %>/holiday">View Holidays</a></p>
  </div>
  <p id="hotel_description" class="medium_text">
    <img class="rounded_border" src="<%= @hotel.image_url %>" alt="<%= @hotel.name %>'s image'">
    <%= @hotel.description %>
  </p>

</div>
